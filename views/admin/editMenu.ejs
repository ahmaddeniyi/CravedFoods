<% include ../partials/header %>    
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit {<%= menu.title %>}</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/api/menus/<%= menu._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="menu[title]" value="<%= menu.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menu[imagePath]" value="<%= menu.imagePath %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menu[description]" value="<%= menu.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menu[price]" value="<%= menu.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="menu[category]" value="<%= menu.category %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/api/menus" style="padding-left: 10em;">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

