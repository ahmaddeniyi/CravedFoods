<% include ../partials/header %>    
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Order <%= menu.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/api/menus/<%= menu._id %>/placeorder" method="POST">
                <% if (currentUser) { %>
                    <div class="form-group">
                        <input class="form-control" type="text" name="currentUser[username]" value="<%= currentUser.username %>" readonly>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Number of Plates</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="paymentId">Payment ID</label>
                        <input type="text" id="paymentId" name="paymentId" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="title" class="form-control" value="<%= menu.title %>">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="price" class="form-control" value="<%= menu.price %>">
                    </div>
                    <div class="form-group">
                        <label for="districts">District</label>
                        <select class="form-control" id="districts" name="district">
                          <option>- Select District -</option>
                          <option value="Liwan">Liwan</option>
                          <option value="Tianhe">Tianhe</option>
                          <option value="Huangpu">Huangpu</option>
                          <option value="Hansha">Hansha</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="address">Delivery Address</label>
                        <input type="text" id="address" name="address" class="form-control" value = "<%= currentUser.state %>" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                <% } %>
            </form>
            <a href="/api/menus" style="padding-left: 10em;">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>



