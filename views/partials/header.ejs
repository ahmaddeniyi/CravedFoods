<% include head %>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">CravedFoods</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <% if(!currentUser || !currentAdmin){ %>
                    <li><a href="/api/user/login">Login</a></li>
                    <li><a href="/api/user/register">Sign Up</a></li>
                <% } else if (currentUser) { %>
                    <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                    <li>
                        <a href="/shopping-cart/">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i> Food Cart
                            <span class="badge"><%= session.cart.totalQty %></span>
                        </a>
                    </li>
                    <li><a href="/api/user/myorders">My Orders</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="#">Signed In As Admin<%= currentAdmin.username %></a></li>
                    <li><a href="/admin/modify-item">Modify Menu</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="/admin/vieworders">View Orders</a>
                    <li><a href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    
    <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if(success && success.length > 0){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>
</div>