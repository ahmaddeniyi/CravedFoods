<% include ../partials/header %>    
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Update Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/api/user/profile/<%= currentUser._id %>?_method=PUT" method="POST">
                <% if (currentUser) { %>
                    <div class="form-group">
                        <input class="form-control" type="text" name="currentUser[username]" value="<%= currentUser.username %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="currentUser[phoneNo]" value="<%= currentUser.phoneNo %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="currentUser[state]" value="<%= currentUser.state %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="currentUser[city]" value="<%= currentUser.city %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="currentUser[email]" value="<%= currentUser.email %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                <% } %>
            </form>
            <a href="/api/menus" style="padding-left: 10em;">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

